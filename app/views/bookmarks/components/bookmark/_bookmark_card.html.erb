<li id="bookmark-<%= bookmark.id %>">
  <div class="btn-group dropend mb-1">
    <%= link_to bookmark_path(bookmark), class: "btn btn-sm btn-success", remote: true do %>
      <svg style="height: 18px;" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z" />
      </svg>
      <span class="bookmark-title">
        <%= bookmark.title %>
      </span>
    <% end %>

    <button type="button" class="btn btn-sm btn-success dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
      <span class="visually-hidden">Toggle Dropright</span>
    </button>
    <ul class="dropdown-menu shadow">
      <li>
        <%= link_to "Edit bookmark",
          edit_bookmark_path(bookmark),
          remote: true,
          class: "dropdown-item py-0" %>
      </li>
      <li>
        <%= link_to "Delete",
          bookmark,
          class: "dropdown-item py-0",
          method: :delete,
          remote: true,
          data: { confirm: 'Are you sure?' } %>
      </li>
    </ul>
  </div>
</li>